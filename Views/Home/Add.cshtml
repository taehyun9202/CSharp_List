@model PirateMember
<h1>Create Pirate</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Age"></span><br>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="PirateRole"></span><br>
        <label asp-for="PirateRole"></label>
        <input asp-for="PirateRole" class="form-control">
    </div>
    <input type="submit" value="Add Pirate" class="btn btn-danger">
</form>