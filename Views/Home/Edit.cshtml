@model PirateMember
<h1>Edit @Model.Name</h1>

<form asp-action="Update" asp-route-CrewID="@Model.PirateId" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Age"></span><br>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="PirateRole"></span><br>
        <label asp-for="PirateRole"></label>
        <input asp-for="PirateRole" class="form-control">
    </div>
    <input type="submit" value="Update @Model.Name" class="btn btn-danger">
</form>